{
  "window.menuBarVisibility": "toggle",
  "window.autoDetectColorScheme": false,
  "window.commandCenter": false,
  "window.restoreWindows": "none",
  "window.titleBarStyle": "native",
  "window.customTitleBarVisibility": "never",
  "window.openFilesInNewWindow": "off",

  "workbench.panel.showLabels": false,
  "workbench.navigationControl.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.activityBar.location": "top",
  "workbench.editor.showTabs": "single",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.indent": 14,
  "workbench.statusBar.visible": false,
  "workbench.tips.enabled": false,
  "breadcrumbs.enabled": false,

  "chat.agent.enabled": false,
  "chat.commandCenter.enabled": false,
  "github.copilot.enable": false,
  "github.copilot.chat.enable": false,

  "files.insertFinalNewline": true,
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 8,
  "editor.autoSurround": "languageDefined",
  "editor.showFoldingControls": "never",
  "editor.renderLineHighlight": "gutter",
  "editor.detectIndentation": true,
  "editor.suggestSelection": "first",
  "editor.multiCursorModifier": "ctrlCmd",

  "editor.linkedEditing": true,
  
  "html.autoClosingTags": true,
  "javascript.autoClosingTags": true,
  "typescript.autoClosingTags": true,

  "editor.quickSuggestionsDelay": 0,

  "workbench.tree.enableStickyScroll": true,
  "editor.bracketPairColorization.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "window.density.editorTabHeight": "compact",
  "editor.accessibilitySupport": "off",
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.empty.hint": "hidden",

  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "explicit",

  "security.workspace.trust.untrustedFiles": "open",

  "files.autoSave": "afterDelay",

  "editor.fontSize": 16,
  "editor.lineHeight": 24,
  "editor.fontWeight": "400",
  "editor.fontLigatures": true,
  "editor.fontFamily": "'JetBrainsMono Nerd Font', 'Fira Code'",
  "editor.tabSize": 2,

  "terminal.integrated.fontSize": 14,
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font', 'Fira Code'",

  "workbench.colorCustomizations": {
    "editorLineNumber.activeForeground": "#f8b50a",
  },

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "constant",
          "meta.class",
          "keyword",
          "support.function",
          "meta.function",
          "entity.name.function",
        ],
        "settings": {
          "fontStyle": "bold"
        }
      },
    ]
  },

  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,

  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/node_modules/**": true,
    "**/.godo/**": true,
    "**/.env/**": true,
    "**/.venv/**": true
  },

  "extensions.ignoreRecommendations": true,
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  "vim.flash.enable": true,
  "vim.leader": " ",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.view.explorer"],
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": [
        "editor.action.rename"
      ],
    },
  ],
  "workbench.iconTheme": "catppuccin-perfect-monokai",
  "workbench.colorTheme": "Moegi Black",
  "go.useLanguageServer": true,
  "go.formatTool": "gofumpt",
  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "notebook.source.fixAll": "explicit",
    "notebook.source.organizeImports": "explicit"
  },
}
