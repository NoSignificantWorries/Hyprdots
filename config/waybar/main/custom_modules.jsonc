{
    "custom/separator": {
        "format": "|",
        "tooltip": false,
    },

    "custom/separator-dot": {
        "format": "•",
        "tooltip": false,
    },

    "custom/powermenu": {
        "format": " 󰐥 ",
        "tooltip": false,
        "class": "poweroff-button",
        "interval": "once",
        "on-click": "~/.scripts/logout_menu.sh",
    },

    "custom/gpu-util": {
        "exec": "$HOME/.scripts/waybar/gpu_util.sh",
        "interval": 5,
        "tooltip": false,
        "format": "{}",
        "on-click": "kitty -e nvtop",
    },

    "custom/gpu-mem": {
        "exec": "$HOME/.scripts/waybar/gpu_mem.sh",
        "interval": 5,
        "tooltip": false,
        "format": "{}",
        "on-click": "kitty -e nvtop",
    },

    "custom/gpu-temp": {
        "exec": "$HOME/.scripts/waybar/gpu_temp.sh",
        "interval": 5,
        "tooltip": false,
        "format": "{}",
        "on-click": "kitty -e nvtop",
    },

    "custom/recording": {
        "exec": "~/.scripts/screen_rec.sh record-status",
        "format": "{}",
        "return-type": "json",
        "on-click": "~/.scripts/screen_rec.sh record-area-start",
        "on-click-right": "~/.scripts/screen_rec.sh record-stop",
        "restart-interval": 1,
        "tooltip": true
    },
}

