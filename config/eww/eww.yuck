(defvar time "00:00:00")

(defpoll time-update :interval "1s"
  `date +%H:%M:%S`)

(defwidget time-widget []
  (box :class "time-widget"
       (label :text time-update)))

(defwindow time-window
  :stacking "fg"
  :focusable "false"
  :layer "overlay"
  :monitor 0
  :screen 0
  :geometry (geometry
    :x "10px"
    :y "10px"
    :width "100px"
    :height "30px"
    :anchor "top left")
  (time-widget))

